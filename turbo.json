{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build-packages": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "check-ts": {
      "dependsOn": ["^check-ts"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "cache": true
    },
    "lint:fix": {
      "cache": true
    },
    "test": {
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "cache": false
    },
    "cypress:headless": {
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "cache": false
    },
    "test:debug": {
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "cache": false,
      "persistent": true
    }
  }
}