{
  "name": "@open-dpp/api-client",
  "type": "module",
  "version": "2.2.1",
  "description": "A client for my API",
  "author": "open-dpp",
  "license": "ISC",
  "keywords": [],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm run clean && tsc && rollup -c",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "jest",
    "check-ts": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "run-before-versions": "npm run lint && npm run build && npm run test",
    "prepatch": "npm run run-before-versions",
    "patch": "git fetch --tags && npm version patch && git push --follow-tags",
    "preminor": "npm run run-before-versions",
    "minor": "git fetch --tags && npm version minor && git push --follow-tags",
    "premajor": "npm run run-before-versions",
    "major": "git fetch --tags && npm version major && git push --follow-tags"
  },
  "dependencies": {
    "axios": "^1.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.21.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.9",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "msw": "^2.7.3",
    "prettier": "^3.5.3",
    "rollup": "^4.34.9",
    "rollup-plugin-dts": "^6.1.1",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2"
  },
  "jest": {
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": ["@swc/jest", {
        "jsc": {
          "target": "es2022",
          "parser": { "syntax": "typescript", "decorators": true },
          "transform": { "decoratorMetadata": true }
        },
        "module": { "type": "commonjs" }
      }]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!((?:\\.pnpm/.*?/)?(?:@(?:open-dpp|keycloak)|until-async))(?:/|$))"
    ],
    "moduleNameMapper": {
      "^@open-dpp/(.*)$": "<rootDir>/../../packages/$1/src"
    },
    "testEnvironment": "node"
  }
}
