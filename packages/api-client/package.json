{
  "name": "@open-dpp/api-client",
  "type": "module",
  "version": "2.2.1",
  "description": "A client for my API",
  "author": "open-dpp",
  "license": "ISC",
  "keywords": [],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm run clean && tsc && rollup -c",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "jest",
    "check-ts": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "run-before-versions": "npm run lint && npm run build && npm run test",
    "prepatch": "npm run run-before-versions",
    "patch": "git fetch --tags && npm version patch && git push --follow-tags",
    "preminor": "npm run run-before-versions",
    "minor": "git fetch --tags && npm version minor && git push --follow-tags",
    "premajor": "npm run run-before-versions",
    "major": "git fetch --tags && npm version major && git push --follow-tags"
  },
  "dependencies": {
    "axios": "^1.12.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@rollup/plugin-typescript": "^12.1.4",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.8.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "msw": "^2.11.6",
    "prettier": "^3.6.2",
    "rollup": "^4.52.5",
    "rollup-plugin-dts": "^6.2.3",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "jest": {
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "jsc": {
            "target": "es2022",
            "parser": {
              "syntax": "typescript",
              "decorators": true
            },
            "transform": {
              "decoratorMetadata": true
            }
          },
          "module": {
            "type": "commonjs"
          }
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!((?:\\.pnpm/.*?/)?(?:@(?:open-dpp)|until-async))(?:/|$))"
    ],
    "moduleNameMapper": {
      "^@open-dpp/(.*)$": "<rootDir>/../../packages/$1/src"
    },
    "testEnvironment": "node"
  }
}
